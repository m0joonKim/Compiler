int main(int i, int j, bool b) {
  int *p1;
  int *p2;
  int x = i - 1;
  int y = j + 2;
  int v1;
  int v2;
  int v3;
  int v4;

  p1 = &x;
  if (b) {
    p2 = &y;
  } else {
    p2 = p1;
  }

  v1 = *p1 + *p2;
  v2 = *p1 - *p2;

  x = x + y;

  v3 = *p1 * *p2;
  if (*p2 != 0) {
    v4 = *p1 / *p2;
  } else {
    v4 = 0;
  }

  return v1 - v2 + v3 - v4;
}
